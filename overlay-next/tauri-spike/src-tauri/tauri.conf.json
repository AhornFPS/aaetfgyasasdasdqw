{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri Overlay Spike",
  "version": "0.1.0",
  "identifier": "com.betterplanetside.taurispike",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": null,
    "frontendDist": "../frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Tauri Overlay Spike",
        "width": 620,
        "height": 500,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "alwaysOnTop": true,
        "visible": true,
        "skipTaskbar": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}
